{
    "compilerOptions": {
        "outDir": "./dist",
        "module": "CommonJS",
        "moduleResolution": "Node",
        "allowJs": true,
        "target": "ESNext",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true
    },
    "ts-node": {
        "esm": true
    },
    "lib": ["esnext"],
    "include": ["./src/**/*.ts"],
    "exclude": ["node_modules"]
}
